<div class="container">
  <img src="http://railsgirls.com/images/rg-warsaw.png">
  <h1>My Rails Girls Diary</h1>
</div>

<div class="container">
  <div class="row">
    <div class="border col-sm-6">
      <% for entry in @entries %>
        <h2><%= link_to(entry.title, entry_path(entry)) %></h2>
        <p class="italic"><%= entry.date %></p>
        <p><%= entry.contents %></p>
      <% end %>
    <%= link_to "See all entries", entries_path %>
    <br><br>
  </div>


    <div class="border col-sm-5">
      <h2>My favourite websites</h2>
        <ul>
          <% for website in @websites %>
            <li><a href="<%= website.url %>" target=_blank><%= website.name %></a></li>
          <% end %>
        </ul>
    </div>
  </div>
</div>